@model IEnumerable<projekt_bd_wypozyczalnia_gier.Models.Game>
<style>
    th, td {
        border: 1px solid black;
        text-align: center;
    }

    thead, tbody {
        border: 1px solid black;
    }

    table {
        width: 100%;
    }
</style>
<h2>Lista Gier</h2>
<table>
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Platforma</th>
            <th>Dostępność</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Description</td>
                <td>@game.Price</td>
                <td>@game.Platform</td>
                <td>@(game.Available ? "Tak" : "Nie")</td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
