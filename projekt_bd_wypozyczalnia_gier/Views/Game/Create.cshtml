@model projekt_bd_wypozyczalnia_gier.Models.Game
<style>
    th, td {
        border: 3px solid black;
        text-align: center;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: white;
    }

    thead, tbody {
        border: 3px solid black;
    }

    table {
        width: 100%;
    }

    body {
        background-color: mediumpurple;
    }

    input {
        margin: 10px;
        padding: 5px;
    }

    label {
        display: inline-block;
        width: 100px;
        margin: 5px;
    }
</style>
<div style="text-align: center;">
<h2>Dodaj Grę</h2>
    <form asp-action="Create" method="post" style="font-size: 30px; padding: 5px;">
    <label for="Title">Tytuł:</label>
    <input type="text" id="Title" name="Title" asp-for="Title" />
    <br />
    <label for="Price">Cena:</label>
    <input type="number" id="Price" name="Price" asp-for="Price" step="0.01" />
    <br />
    <label for="Description">Opis:</label>
    <input type="text" id="Description" name="Description" asp-for="Description" />
    <br />
    <label for="Platform">Platforma:</label>
    <input type="text" id="Platform" name="Platform" asp-for="Platform" />
    <br />
    <label style="margin-right: 50px;" for="Available">Dostępność:</label>
    <input type="checkbox" id="Available" name="Available" asp-for="Available" />
    <br />
    <button type="submit">Zapisz</button>
</form>
<a href="/Game" style="text-decoration: none; color: white; font-size: 20px;">Powrót</a>
</div>