@model projekt_bd_wypozyczalnia_gier.Models.Game

<h2>Edytuj Grę</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <label for="Title">Tytuł:</label>
    <input type="text" id="Title" asp-for="Title" />
    <br />
    <label for="Description">Opis:</label>
    <input type="text" id="Description" asp-for="Description" />
    <br />
    <label for="Price">Cena:</label>
    <input type="number" id="Price" asp-for="Price" step="0.01" />
    <br />
    <label for="Platform">Platforma:</label>
    <input type="text" id="Platform" asp-for="Platform" />
    <br />
    <label for="Available">Dostępność:</label>
    <input type="checkbox" id="Available" asp-for="Available" />
    <br />
    <button type="submit">Zapisz</button>

</form>
<a href="/Game">Powrót</a>
