@model projekt_bd_wypozyczalnia_gier.Models.RegisterViewModel

<h2>Rejestracja</h2>

<form asp-action="Register" method="post">
    <div>
        <label for="FirstName">Imię</label>
        <input type="text" id="FirstName" asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label for="LastName">Nazwisko</label>
        <input type="text" id="LastName" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="PhoneNumber">Numer telefonu</label>
        <input type="text" id="PhoneNumber" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label for="Address">Adres</label>
        <input type="text" id="Address" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label for="Password">Hasło</label>
        <input type="password" id="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Zarejestruj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
