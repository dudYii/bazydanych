@model projekt_bd_wypozyczalnia_gier.Models.RegisterViewModel
<style>
    th, td {
        border: 3px solid black;
        text-align: center;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        background-color: white;
    }

    thead, tbody {
        border: 3px solid black;
    }

    table {
        width: 100%;
    }

    body {
        background-color: mediumpurple;
    }
    label {
        display: inline-block;
        width: 100px;
        margin: 5px;
    }
</style>
<div style="text-align: center;">
<h2>Rejestracja</h2>

<form asp-action="Register" method="post" style="font-size: 25px; padding: 5px;">
    <div>
        <label for="FirstName">Imię</label>
        <input type="text" id="FirstName" asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label for="LastName">Nazwisko</label>
        <input type="text" id="LastName" asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label for="PhoneNumber">Telefon</label>
        <input type="text" id="PhoneNumber" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label for="Address">Adres</label>
        <input type="text" id="Address" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label for="Password">Hasło</label>
        <input type="password" id="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Zarejestruj</button>
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
