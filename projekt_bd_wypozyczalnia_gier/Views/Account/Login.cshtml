@model projekt_bd_wypozyczalnia_gier.Models.LoginViewModel
<style>
    body {
        background-color: mediumpurple;
    }

    input {
        margin: 10px;
        padding: 5px;
    }

    label {
        display: inline-block;
        width: 100px;
        margin: 5px;
    }
</style>
<div style="text-align: center;">
<h2>Logowanie</h2>

    <form asp-action="Login" method="post" style="font-size: 25px; padding: 5px;">
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" />
    </div>
    <div>
        <label for="Password">Hasło</label>
        <input type="password" id="Password" asp-for="Password" />
    </div>
    <button type="submit">Zaloguj</button>
</form>
</div>